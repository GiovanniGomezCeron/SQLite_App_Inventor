<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar SesiÃ³n"
                android:textColor="#03A9F4"
                android:textSize="22sp"
                app:fontFamily="@font/caveat_brush" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:srcCompat="@mipmap/user" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                app:boxStrokeColor="#03A9F4"
                app:hintTextColor="#03A9F4"
                android:fontFamily="@font/sofia">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia"
                    android:hint="Username o Email"
                    android:inputType="text"
                    android:textColor="#F44336" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@mipmap/password" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sofia"
                app:boxStrokeColor="#03A9F4"
                app:hintTextColor="#03A9F4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofia"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#F44336" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="validator"
                android:text="Entrar"
                app:backgroundTint="#FF9800"
                app:fontFamily="@font/caveat_brush" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tiene cuenta? "
                    android:textSize="20sp"
                    app:fontFamily="@font/chewy" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="Registrar"
                    android:text="Registrese"
                    android:textColor="#03A9F4"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:fontFamily="@font/sofia" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




