<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".acercade">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/itca" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="DAUTE"
                android:textColor="#F44336"
                android:textSize="30sp"
                app:fontFamily="@font/caveat_brush" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creadores"
                android:textColor="#673AB7"
                android:textSize="22sp"
                app:fontFamily="@font/caveat_brush" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Edgar Giovanni Gómez Cerón"
                android:textColor="#2196F3"
                android:textSize="20sp"
                app:fontFamily="@font/sofia" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Erick Josué Urrutia Rivera"
                android:textColor="#2196F3"
                android:textSize="20sp"
                app:fontFamily="@font/sofia" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Brayan Eduardo Flores Rodriguez"
                android:textColor="#2196F3"
                android:textSize="20sp"
                app:fontFamily="@font/sofia" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="José Horacio Cuellar Juárez"
                android:textColor="#2196F3"
                android:textSize="20sp"
                app:fontFamily="@font/sofia" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Docente"
                android:textColor="#673AB7"
                android:textSize="22sp"
                app:fontFamily="@font/chewy" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ing. Manuel Jesús Gámez López"
                android:textColor="#F44336"
                android:textSize="20sp"
                app:fontFamily="@font/sofia" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Home"
                android:text="Inicio"
                android:textSize="18sp"
                app:backgroundTint="#FF9800"
                android:fontFamily="@font/caveat_brush"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>